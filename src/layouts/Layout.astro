---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-secondary-main">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="min-h-screen bg-gradient-to-r from-primary-main from-31% to-secondary-main to-100% pt-48 pr-8 pl-8 pb-48"
  >
    <slot />
  </body>
</html>
<style is:global>
  ::selection {
    background-color: #6d72c3;
    color: white;
  }
  p {
    line-height: 1.625;
  }
</style>
