---
import Image from "astro/components/Image.astro"

const {project} = Astro.props
---

<a href={project.link} target="_blank">
    <div class="flex flex-col lg:flex-row md:flex-col sm:flex-col mb-4 p-4 rounded-md bg-transparent hover:bg-tertiary-main hover:bg-opacity-[.12]">
        <div class="flex-3 grow mr-4">
            <Image class={"w-full object-cover"} src={project.image} alt="Project Image" />
        </div>
        <div class="flex-2 grow flex flex-col items-stretch w-full">
            <p class="text-lg text-grey-800 font-bold mb-2">{project.title}</p>
            <p class="text-md text-grey-800 font-regular">{project.description}</p>
        </div>
    </div>
</a>
